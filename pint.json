{
    "preset": "laravel",
    "exclude": [
        "build"
    ],
    "notPath": [
        "ray.php"
    ],
    "cache-file": "build/pint",
    "rules": {
        "blank_line_before_statement": true,
        "concat_space": {
            "spacing": "one"
        },
        "method_argument_space": true,
        "single_trait_insert_per_statement": true,
        "types_spaces": {
            "space": "single"
        },
        "declare_strict_types": true,
        "strict_comparison":  true,
        "strict_param":  true
    }
}
